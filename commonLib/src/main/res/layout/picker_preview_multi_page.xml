<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_picker_preview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/c_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/cb_picker_preview_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v_picker_preview_check_region"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        app:layout_constraintBottom_toBottomOf="@+id/cb_picker_preview_check"
        app:layout_constraintEnd_toEndOf="@+id/cb_picker_preview_check"
        app:layout_constraintStart_toStartOf="@+id/cb_picker_preview_check"
        app:layout_constraintTop_toTopOf="@+id/cb_picker_preview_check" />

</androidx.constraintlayout.ConstraintLayout>
