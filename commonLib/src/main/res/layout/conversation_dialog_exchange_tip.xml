<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_255"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:background="@drawable/bg_corner_top_left_right_white"
        android:gravity="center"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_16" />

    <LinearLayout
        android:id="@+id/rl_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_below="@+id/tv_content"
        android:visibility="visible">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_corner_left_normal"
            android:text="@string/sm_cancel"
            android:textColor="@color/text_66"
            android:textSize="@dimen/sp_13"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/btn_Confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_corner_right_main"
            android:text="@string/str_confirm"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13"
            tools:ignore="ButtonStyle" />
    </LinearLayout>

</RelativeLayout>