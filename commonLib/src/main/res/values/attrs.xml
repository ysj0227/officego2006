    <declare-styleable name="TitleBarView">
        <!--左边icon-->
        <attr name="leftIcon" format="reference|color" />
        <!--Title文字、文字颜色、文字大小-->
        <attr name="titleText" format="string" />
        <attr name="titleTextColor" format="color" />
        <attr name="titleTextSize" format="dimension" />
        <!--右边icon-->
        <attr name="rightIcon" format="reference" />
        <attr name="leftText" />
        <attr name="leftTextSize" />
        <attr name="leftTextColor" />
        <attr name="rightText" />
        <attr name="rightTextBackground" format="reference" />
        <attr name="rightTextSize" />
        <attr name="rightTextColor" />

        <!--状态栏颜色-->
        <attr name="statusBarColor" format="reference" />
        <!--分割线-->
        <attr name="dividerShow" />
        <attr name="dividerColor" />

        <!--左边icon默认点击事件-->
        <attr name="leftDefaultClickEnable" format="boolean" />

        <attr name="topview_isAdjustResize" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SettingItemLayout">
        <attr name="parentHeight" /> <!-- 左边文字内容-->
        <attr name="leftText" /> <!-- 左边文字内容-->
        <attr name="leftTextSize" /><!-- 左边文字大小-->
        <attr name="leftTextColor" /><!-- 左边文字颜色-->
        <attr name="centerText" /><!-- 右边文字内容-->
        <attr name="centerTextHint" format="string" />
        <attr name="centerTextHintColor" format="color" />
        <attr name="centerTextSize" format="dimension" /><!-- 右边文字大小-->
        <attr name="centerTextColor" format="color" /><!-- 右边文字颜色-->

        <attr name="leftToArrowText" format="string"/><!-- 箭头左侧文字内容-->
        <attr name="leftToArrowTextSize" format="dimension" /><!-- 箭头左侧文字大小-->
        <attr name="leftToArrowTextColor" format="color" /><!-- 箭头左侧文字颜色-->

        <attr name="rightText" /> <!-- 右边文字颜色-->
        <attr name="rightTextSize" />
        <attr name="rightTextColor" />
        <attr name="editTextContent" format="string" /><!-- 中间编辑框-->
        <attr name="editTextSize" format="dimension" />
        <attr name="editTextColor" format="color" />
        <attr name="editTextHint" format="string" />
        <attr name="editTextHintColor" format="color" />
        <attr name="editTextBackground" format="reference" />
        <attr name="editTextInputType">
            <flag name="none" value="0x00000000" />
            <flag name="text" value="0x00000001" />
            <flag name="textMultiLine" value="0x00020001" />
            <flag name="number" value="0x00000002" />
            <flag name="numberDecimal" value="0x00002002" />
            <flag name="phone" value="0x00000003" />
        </attr>
        <attr name="rightImageBackground" format="reference" /><!-- 右侧图片背景-->
        <attr name="leftMarkShow" format="enum"><!-- 左侧必选图片是否显示-->
            <enum name="visible" value="0" />
            <enum name="invisible" value="1" />
        </attr>
        <!-- 中间文本是否显示-->
        <attr name="showCenterText" format="enum">
            <enum name="visible" value="0" />
            <enum name="gone" value="1" />
        </attr>
        <!-- 左侧必选图片是否显示-->
        <attr name="showEditText" format="enum">
            <enum name="visible" value="0" />
            <enum name="gone" value="1" />
        </attr>
        <!-- 右侧箭头是否显示-->
        <attr name="rightArrowShow" format="enum">
            <enum name="visible" value="0" />
            <enum name="gone" value="1" />
        </attr>
        <!-- 右侧其他图片的设置是否显示 -->
        <attr name="rightOtherImageViewShow" format="enum">
            <enum name="visible" value="0" />
            <enum name="gone" value="1" />
        </attr>

        <!-- 分割线位置 -->
        <attr name="showDividerTop" format="enum">
            <enum name="visible" value="0" />
            <enum name="gone" value="1" />
        </attr>
        <!-- 分割线位置 -->
        <attr name="showDividerBottom" format="enum">
            <enum name="visible" value="0" />
            <enum name="gone" value="1" />
        </attr>

    </declare-styleable>

