<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ctl_building_details"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_building_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_26"
        android:text="房源信息"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/tl_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_building_text">

        <TableRow tools:ignore="UselessParent">

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="办公格局："
                android:textColor="@color/text_66_p50"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="朝向："
                android:textColor="@color/text_66_p50"
                android:textSize="@dimen/sp_12" />
        </TableRow>

        <TableRow
            android:layout_marginTop="@dimen/dp_12"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/tv_office_pattern"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="@string/str_text_line"
                android:textColor="@color/text_33"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_orientation"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/str_text_line"
                android:textColor="@color/text_33"
                android:textSize="@dimen/sp_12" />
        </TableRow>

        <TableRow
            android:layout_marginTop="@dimen/dp_15"
            tools:ignore="UselessParent">

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="楼层:"
                android:textColor="@color/text_66_p50"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="最早可租:"
                android:textColor="@color/text_66_p50"
                android:textSize="@dimen/sp_12" />
        </TableRow>

        <TableRow
            android:layout_marginTop="@dimen/dp_12"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/tv_total_floor"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="@string/str_text_line"
                android:textColor="@color/text_33"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_earliest_delivery"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/str_text_line"
                android:textColor="@color/text_33"
                android:textSize="@dimen/sp_12" />
        </TableRow>

        <TableRow
            android:layout_marginTop="@dimen/dp_15"
            tools:ignore="UselessParent">

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="免租期:"
                android:textColor="@color/text_66_p50"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="最短租期:"
                android:textColor="@color/text_66_p50"
                android:textSize="@dimen/sp_12" />
        </TableRow>

        <TableRow
            android:layout_marginTop="@dimen/dp_12"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/tv_rent_free_period"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="@string/str_text_line"
                android:textColor="@color/text_33"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_minimum_lease"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/str_text_line"
                android:textColor="@color/text_33"
                android:textSize="@dimen/sp_12" />
        </TableRow>

    </TableLayout>

    <View
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/common_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tl_details" />

</androidx.constraintlayout.widget.ConstraintLayout>