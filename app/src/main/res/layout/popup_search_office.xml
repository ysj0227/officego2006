<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pop_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:background="@drawable/text_bg_selector"
            android:id="@+id/tv_pop_all"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_34"
            android:text="@string/str_house_all"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:background="@drawable/text_bg_selector"
            android:id="@+id/tv_pop_office"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/str_house_office"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:background="@drawable/text_bg_selector"
            android:id="@+id/tv_pop_tenant"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_40"
            android:text="@string/str_house_tenant"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_15" />

    </LinearLayout>
</RelativeLayout>