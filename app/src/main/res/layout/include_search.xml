<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ctl_search"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_50"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_search_area"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:drawableEnd="@mipmap/ic_arrow_down"
        android:drawablePadding="@dimen/dp_3"
        android:gravity="center"
        android:text="区域"
        android:textColor="@color/text_66"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_search_office"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_search_office"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:drawableEnd="@mipmap/ic_arrow_down"
        android:drawablePadding="@dimen/dp_3"
        android:gravity="center"
        android:text="全部"
        android:textColor="@color/common_blue_main"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_search_area"
        app:layout_constraintRight_toLeftOf="@id/tv_search_order"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_search_order"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:drawableEnd="@mipmap/ic_arrow_down"
        android:drawablePadding="@dimen/dp_3"
        android:gravity="center"
        android:text="排序"
        android:textColor="@color/text_66"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_search_office"
        app:layout_constraintRight_toLeftOf="@id/tv_search_condition"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_search_condition"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:drawableEnd="@mipmap/ic_arrow_down"
        android:drawablePadding="@dimen/dp_3"
        android:gravity="center"
        android:text="筛选"
        android:textColor="@color/text_66"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_search_order"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/common_divider"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>