<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.officego.commonlib.view.CircleImage
        android:id="@+id/iv_item_nearby_service"
        android:layout_width="@dimen/dp_24"
        android:layout_height="24dp"
        android:background="@mipmap/ic_app_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_item_nearby_service_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:text="周边配套"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toRightOf="@id/iv_item_nearby_service"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item_nearby_service_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_2"
        android:text="2个"
        android:textColor="@color/text_66"
        android:textSize="@dimen/sp_10"
        app:layout_constraintLeft_toRightOf="@id/iv_item_nearby_service"
        app:layout_constraintTop_toBottomOf="@id/tv_item_nearby_service_name" />

</androidx.constraintlayout.widget.ConstraintLayout>