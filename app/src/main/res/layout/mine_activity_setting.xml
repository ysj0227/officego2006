<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_f2">

    <com.officego.commonlib.view.TitleBarView
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_white"
        app:dividerShow="true"
        app:leftDefaultClickEnable="true"
        app:leftIcon="@drawable/ic_back_dark"
        app:titleText="@string/str_setting"
        app:titleTextColor="@color/text_33" />

    <com.officego.commonlib.view.widget.SettingItemLayout
        android:id="@+id/sil_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_bar"
        app:leftMarkShow="invisible"
        app:leftText="@string/str_modify_mobile"
        app:leftTextSize="@dimen/sp_15"
        app:leftToArrowTextColor="@color/text_33"
        app:rightArrowShow="visible"
        app:rightOtherImageViewShow="gone"
        app:showCenterText="gone"
        app:showDividerBottom="visible"
        app:showEditText="gone" />

    <com.officego.commonlib.view.widget.SettingItemLayout
        android:id="@+id/sil_version_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sil_mobile"
        app:leftMarkShow="invisible"
        app:leftText="@string/str_version_update"
        app:leftTextSize="@dimen/sp_15"
        app:leftToArrowTextColor="@color/text_33"
        app:rightArrowShow="visible"
        app:rightOtherImageViewShow="gone"
        app:showCenterText="gone"
        app:showDividerBottom="visible"
        app:showEditText="gone" />

    <Button
        android:id="@+id/btn_logout"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_below="@id/sil_version_update"
        android:layout_marginStart="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_45"
        android:layout_marginEnd="@dimen/dp_18"
        android:background="@drawable/button_corners5_solid_white"
        android:text="@string/str_logout"
        android:textColor="@color/text_66"
        android:textSize="@dimen/sp_18" />

</RelativeLayout>