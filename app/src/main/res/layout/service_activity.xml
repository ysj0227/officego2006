<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.officego.commonlib.view.TitleBarView
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_white"
        app:dividerShow="true"
        app:leftDefaultClickEnable="true"
        app:leftIcon="@drawable/ic_back_dark"
        app:titleText="客服"
        app:titleTextColor="@color/text_main" />

    <ImageView
        android:id="@+id/iv_service"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_below="@id/title_bar"
        android:background="@mipmap/ic_service_bg"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/iv_email"
        android:layout_width="@dimen/dp_33"
        android:layout_height="@dimen/dp_33"
        android:layout_alignBottom="@id/iv_service"
        android:layout_marginStart="@dimen/dp_28"
        android:layout_marginBottom="@dimen/dp_24"
        android:background="@mipmap/ic_email"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/iv_call_phone"
        android:layout_width="@dimen/dp_33"
        android:layout_height="@dimen/dp_33"
        android:layout_alignBottom="@id/iv_service"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginBottom="@dimen/dp_24"
        android:layout_toRightOf="@id/iv_email"
        android:background="@mipmap/ic_call_phone"
        tools:ignore="ContentDescription,RtlHardcoded" />


</RelativeLayout>