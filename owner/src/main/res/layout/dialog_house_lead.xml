<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/black_40"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_lead"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_240"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_marginEnd="@dimen/dp_20"
        android:src="@mipmap/ic_identity_add_house" />

    <TextView
        android:id="@+id/tv_status_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_lead"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_20"
        android:text="审核通过，可立即添加房源"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_dismiss"
        android:layout_width="@dimen/dp_138"
        android:layout_height="@dimen/dp_35"
        android:layout_below="@id/tv_status_tip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_36"
        android:background="@drawable/button_corners25_solid_main"
        android:gravity="center"
        android:text="我知道了"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15" />
</RelativeLayout>