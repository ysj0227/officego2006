<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_characteristic"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_house_characteristic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_18"
        android:text="楼盘特色"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_house_characteristic"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_2"
        android:layout_toEndOf="@id/tv_house_characteristic"
        android:text="最多选择4项"
        android:textColor="@color/text_66_p50"
        android:textSize="@dimen/sp_12" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_house_characteristic"
        style="@style/marginLeftRight18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_house_characteristic"
        android:layout_marginTop="@dimen/dp_18" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/rv_house_characteristic"
        android:layout_marginTop="@dimen/dp_26"
        android:background="@color/common_divider"
        android:visibility="visible" />
</RelativeLayout>