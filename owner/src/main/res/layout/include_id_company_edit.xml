<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_company_name"
    style="@style/marginLeftRight18"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_58">

    <TextView
        android:id="@+id/tv_text_company_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="公司名称："
        android:textColor="@color/text_99"
        android:textSize="@dimen/sp_15" />

    <com.officego.commonlib.view.ClearableEditText
        android:id="@+id/cet_company_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_toEndOf="@id/tv_text_company_name"
        android:background="@null"
        android:maxLength="20"
        android:maxLines="1"
        android:layout_marginEnd="@dimen/dp_80"
        android:singleLine="true"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_15" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/tv_company_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_10"
            android:background="@drawable/button_corners_solid_main"
            android:gravity="center"
            android:padding="@dimen/dp_4"
            android:text="@string/button_edit"
            android:textColor="@color/white"
            android:textSize="9sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_company_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/tv_company_edit"
            android:background="@drawable/button_corners_solid_main"
            android:gravity="center"
            android:padding="@dimen/dp_4"
            android:text="@string/button_clear"
            android:textColor="@color/white"
            android:textSize="9sp"
            android:visibility="visible" />

    </RelativeLayout>
</RelativeLayout>


