<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_no"
        style="@style/marginLeftRight18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="订单号"
        android:textColor="@color/text_99"
        android:textSize="@dimen/sp_11" />

    <TextView
        android:id="@+id/tv_status"
        style="@style/marginLeftRight18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dp_12"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="支付成功"
        android:textColor="@color/text_66"
        android:textSize="@dimen/sp_11" />

    <com.officego.commonlib.view.RoundImageView
        android:id="@+id/iv_pic"
        android:layout_width="@dimen/dp_106"
        android:layout_height="@dimen/dp_80"
        android:layout_below="@id/tv_no"
        android:layout_marginStart="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_15" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_pic"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_toEndOf="@id/iv_pic"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_toEndOf="@id/iv_pic"
        android:singleLine="true"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_11" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_type"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_toEndOf="@id/iv_pic"
        android:singleLine="true"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_11" />

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_time"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_toEndOf="@id/iv_pic"
        android:singleLine="true"
        android:textColor="@color/common_blue_main"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold" />

    <View
        android:id="@+id/v_line1"
        style="@style/marginLeftRight18"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_below="@id/tv_count"
        android:layout_marginTop="@dimen/dp_13"
        android:background="@color/common_divider" />

    <TextView
        android:id="@+id/tv_pay_time"
        style="@style/marginLeftRight18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/v_line1"
        android:layout_marginTop="@dimen/dp_12"
        android:singleLine="true"
        android:textColor="@color/text_99"
        android:textSize="@dimen/sp_11" />

    <TextView
        android:id="@+id/tv_consult"
        style="@style/marginLeftRight18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv_pay_time"
        android:layout_alignParentEnd="true"
        android:drawableEnd="@mipmap/ic_right_arrow_gray"
        android:drawablePadding="@dimen/dp_3"
        android:singleLine="true"
        android:text="对此订单有疑问/开发票"
        android:textColor="@color/text_99"
        android:textSize="@dimen/sp_11" />

    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:layout_below="@id/tv_consult"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/common_divider" />
</RelativeLayout>

