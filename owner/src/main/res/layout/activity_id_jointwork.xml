<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.officego.commonlib.view.TitleBarView
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_blue_main"
        app:dividerShow="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:leftDefaultClickEnable="true"
        app:leftIcon="@drawable/ic_back_light"
        app:titleText="联合办公业主认证"
        app:titleTextColor="@color/white" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsv_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/dp_70"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_bar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_identity"
                style="@style/marginLeftRight18"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_58"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_identity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="认证身份："
                    android:textColor="@color/text_99"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/tv_id_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_4"
                    android:layout_toEndOf="@id/tv_identity"
                    android:text="联合办公"
                    android:textColor="@color/text_33"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/ic_right_arrow_small" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_alignParentBottom="true"
                    android:background="@color/common_divider" />
            </RelativeLayout>


            <include
                layout="@layout/include_id_jointwork_edit"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_80"
                android:layout_marginStart="@dimen/dp_18"
                android:layout_marginEnd="@dimen/dp_6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rl_identity" />

            <include
                layout="@layout/include_id_company_edit"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_58"
                android:layout_marginStart="@dimen/dp_18"
                android:layout_marginEnd="@dimen/dp_6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rl_jointwork_name" />

            <View
                android:id="@+id/v_gray_spaces"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_10"
                android:background="@color/common_divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rl_company_name" />

            <RelativeLayout
                android:id="@+id/rl_office"
                style="@style/marginLeftRight18"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_64"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rl_company_name">

                <TextView
                    android:id="@+id/tv_text_office"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="所在楼盘："
                    android:textColor="@color/text_99"
                    android:textSize="@dimen/sp_15" />

                <com.officego.commonlib.view.ClearableEditText
                    android:id="@+id/cet_office_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_4"
                    android:layout_toEndOf="@id/tv_text_office"
                    android:background="@null"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/text_33"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_text_office"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_84"
                    android:layout_marginTop="@dimen/dp_5"
                    android:drawablePadding="@dimen/dp_4"
                    android:textColor="@color/text_99"
                    android:textSize="@dimen/sp_12"
                    android:visibility="gone" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_alignParentBottom="true"
                    android:background="@color/common_divider" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_type"
                style="@style/marginLeftRight18"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_58"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rl_office">

                <TextView
                    android:id="@+id/tv_text_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="房产类型："
                    android:textColor="@color/text_99"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_4"
                    android:layout_toEndOf="@id/tv_text_type"
                    android:text="租赁房产"
                    android:textColor="@color/text_33"
                    android:textSize="@dimen/sp_15" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_alignParentBottom="true"
                    android:background="@color/common_divider" />
            </RelativeLayout>

            <include
                layout="@layout/include_id_jointwork"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_18"
                app:layout_constrainedHeight="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rl_type" />

            <RelativeLayout
                android:id="@+id/rl_recommend_jointwork"
                android:layout_width="0dp"
                android:layout_height="800dp"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_18"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rl_jointwork_name">

                <TextView
                    android:id="@+id/tv_add_jointwork"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="加入网点，即可共同管理网点房源"
                    android:textColor="@color/text_33"
                    android:textSize="@dimen/sp_14" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_recommend_jointwork"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_add_jointwork"
                    android:layout_marginTop="@dimen/dp_10"
                    android:nestedScrollingEnabled="false" />
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_recommend_company"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_600"
                android:background="@color/white"
                android:nestedScrollingEnabled="false"
                android:paddingLeft="@dimen/dp_18"
                android:paddingBottom="@dimen/dp_50"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rl_company_name" />

            <RelativeLayout
                android:id="@+id/rl_recommend_building"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_500"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_18"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rl_office">

                <TextView
                    android:id="@+id/tv_no_building"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_12"
                    android:drawablePadding="@dimen/dp_3"
                    android:text="楼盘不存在"
                    android:textColor="@color/text_33"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/ibt_close_keyboard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_12"
                    android:drawablePadding="@dimen/dp_3"
                    android:text="创建楼盘"
                    android:textColor="@color/common_blue_main"
                    android:textSize="@dimen/sp_13" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_recommend_building"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ibt_close_keyboard"
                    android:layout_marginTop="@dimen/dp_5"
                    android:nestedScrollingEnabled="false"
                    android:paddingBottom="@dimen/dp_50" />
            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/btn_upload"
        style="@style/marginLeftRight18"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/btn_common_bg_primary"
        android:gravity="center"
        android:text="@string/str_submit_identity"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nsv_view" />
</androidx.constraintlayout.widget.ConstraintLayout>

