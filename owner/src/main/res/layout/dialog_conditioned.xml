<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_320"
    android:background="@drawable/bg_shape_white">

    <RelativeLayout
        android:id="@+id/rl_title"
        style="@style/marginLeftRight20"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_58">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="空调类型"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_16" />

        <RelativeLayout
            android:id="@+id/rl_exit"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/iv_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/ic_delete_grey"
                tools:ignore="ContentDescription" />
        </RelativeLayout>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_alignParentBottom="true"
            android:background="@color/common_divider"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_type1"
        style="@style/marginLeftRight20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_title"
        android:layout_marginTop="@dimen/dp_25"
        android:background="@drawable/line_bottom_gray"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_15"
        android:text="中央空调"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:id="@+id/tv_type2"
        style="@style/marginLeftRight20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_type1"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/line_bottom_gray"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_15"
        android:text="独立空调"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:id="@+id/tv_type3"
        style="@style/marginLeftRight20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_type2"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/line_bottom_gray"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_15"
        android:text="无空调"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_15" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        android:background="@drawable/btn_common_bg_primary"
        android:gravity="center"
        android:text="@string/sm_cancel"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15" />

</RelativeLayout>