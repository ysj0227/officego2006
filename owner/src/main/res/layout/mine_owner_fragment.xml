<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_blue_main"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_setting"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dp_58"
        android:layout_marginEnd="@dimen/dp_18"
        android:src="@mipmap/ic_setting" />

    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_206">

        <com.officego.commonlib.view.CircleImage
            android:id="@+id/civ_avatar"
            android:layout_width="@dimen/dp_72"
            android:layout_height="@dimen/dp_72"
            android:layout_marginStart="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_90"
            android:src="@mipmap/default_avatar"
            app:radius="@dimen/dp_40" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_97"
            android:layout_toEndOf="@+id/civ_avatar"
            android:maxLength="10"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_19" />

        <TextView
            android:id="@+id/tv_idify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_name"
            android:layout_marginBottom="@dimen/dp_3"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_toEndOf="@+id/tv_name"
            android:drawablePadding="@dimen/dp_8"
            android:maxLength="16"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_toEndOf="@+id/civ_avatar"
            android:paddingRight="@dimen/dp_10"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="100dp"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dp_110"
            android:layout_marginEnd="@dimen/dp_18"
            android:background="@drawable/button_corners25_edge_transparent"
            android:text="去登录"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            android:visibility="gone" />
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_head"
        android:background="@drawable/bg_rounded_corner_top_white"
        android:fadingEdge="none"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            style="@style/marginLeftRight18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_help"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_56">

                <ImageView
                    android:id="@+id/iv_help"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/ic_help"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_18"
                    android:layout_toEndOf="@id/iv_help"
                    android:text="@string/str_help"
                    android:textColor="@color/text_33"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_right_arrow_small" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_alignParentBottom="true"
                    android:background="@color/common_divider" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_service"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_56">

                <ImageView
                    android:id="@+id/iv_service"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/ic_customer_service"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_18"
                    android:layout_toEndOf="@id/iv_service"
                    android:text="@string/str_customer_service"
                    android:textColor="@color/text_33"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_right_arrow_small" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_alignParentBottom="true"
                    android:background="@color/common_divider" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_protocol"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_56">

                <ImageView
                    android:id="@+id/iv_protocol"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/ic_protocol"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_18"
                    android:layout_toEndOf="@id/iv_protocol"
                    android:text="@string/str_privacy"
                    android:textColor="@color/text_33"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_right_arrow_small" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_alignParentBottom="true"
                    android:background="@color/common_divider" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_about"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_56">

                <ImageView
                    android:id="@+id/iv_about"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/ic_about"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_18"
                    android:layout_toEndOf="@id/iv_about"
                    android:text="@string/str_about_us"
                    android:textColor="@color/text_33"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_right_arrow_small" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_alignParentBottom="true"
                    android:background="@color/common_divider" />
            </RelativeLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>