<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_blue_main">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_alignParentBottom="true"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/tv_message_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_18"
                android:text="消息"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_17" />

            <TextView
                android:id="@+id/tv_message_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_18"
                android:paddingRight="@dimen/dp_10"
                android:text="@string/str_history_contacts"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14" />

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_message_user_expire"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/trans_common_35"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="@dimen/dp_268"
            android:layout_height="@dimen/dp_180"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_shape_white12">

            <TextView
                android:id="@+id/tv_mes_success"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_30"
                android:text="账号试用到期"
                android:textColor="@color/text_33"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_mes_success"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/dp_38"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_38"
                android:gravity="center_horizontal"
                android:text="您的账号试用期已过，请联系客服重新激活。"
                android:textColor="@color/text_33"
                android:textSize="@dimen/sp_14" />

            <Button
                android:id="@+id/btn_support_service"
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_36"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dp_20"
                android:background="@drawable/button_corners25_solid_main"
                android:text="联系客服"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />
        </RelativeLayout>

    </RelativeLayout>

    <fragment
        android:id="@+id/conversationlist"
        android:name="io.rong.imkit.fragment.ConversationListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_title"
        tools:ignore="FragmentTagUsage" />

</RelativeLayout>