<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/transparent">

    <RelativeLayout
        android:layout_width="@dimen/dp_300"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_shape_white"
        android:orientation="vertical">

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/btn_close"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="@mipmap/ic_delete_grey" />

        <TextView
            android:id="@+id/tv_office_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_44"
            style="@style/marginLeftRight25"
            android:gravity="center"
            android:text="打开https://www.officego.com在电脑上发布和管理房源"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:id="@+id/iv_content"
            android:layout_width="@dimen/dp_175"
            android:layout_height="@dimen/dp_100"
            android:layout_below="@id/tv_office_url"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_26"
            android:background="@mipmap/ic_undraw_site_stats"
            tools:ignore="ContentDescription" />

        <Button
            android:id="@+id/btn_app"
            android:layout_width="@dimen/dp_136"
            android:layout_height="@dimen/dp_35"
            android:layout_below="@id/iv_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_60"
            android:background="@drawable/button_corners_edge_white"
            android:text="继续在APP上编辑"
            android:textColor="@color/common_blue_main"
            android:textSize="@dimen/sp_14" />

        <Button
            android:id="@+id/btn_web"
            android:layout_width="@dimen/dp_136"
            android:layout_height="@dimen/dp_35"
            android:layout_below="@id/btn_app"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_35"
            android:background="@drawable/btn_common_bg_primary"
            android:text="去电脑上编辑"
            android:paddingLeft="@dimen/dp_10"
            android:drawableStart="@mipmap/ic_scan_white"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />

    </RelativeLayout>
</LinearLayout>