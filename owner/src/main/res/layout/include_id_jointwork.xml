<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/ctl_identity_root"
    android:visibility="gone"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_text_property_ownership_certificate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/dp_14"
        android:text="上传房产证"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_tip_property_ownership_certificate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/dp_6"
        android:text="请确保所上传的房产信息与公司信息一致"
        android:textColor="@color/text_66_p50"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_text_property_ownership_certificate" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_property_ownership_certificate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:nestedScrollingEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_tip_property_ownership_certificate" />

    <TextView
        android:id="@+id/tv_text_rental_agreement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/dp_14"
        android:text="上传租赁协议"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_property_ownership_certificate" />

    <TextView
        android:id="@+id/tv_tip_rental_agreement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/dp_6"
        android:text="上传内容务必包含承租方名称、租赁大厦名称和出租方公章"
        android:textColor="@color/text_66_p50"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_text_rental_agreement" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_rental_agreement"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:nestedScrollingEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_tip_rental_agreement" />

</androidx.constraintlayout.widget.ConstraintLayout>

