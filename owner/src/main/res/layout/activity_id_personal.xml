<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.officego.commonlib.view.TitleBarView
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_blue_main"
        app:dividerShow="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:leftDefaultClickEnable="true"
        app:leftIcon="@drawable/ic_back_light"
        app:titleText="个人业主认证"
        app:titleTextColor="@color/white" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsv_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/dp_70"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_bar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_identity"
                style="@style/marginLeftRight18"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_58"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_identity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="认证身份："
                    android:textColor="@color/text_99"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/tv_id_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_4"
                    android:layout_toEndOf="@id/tv_identity"
                    android:text="个人"
                    android:textColor="@color/text_33"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/ic_right_arrow_small" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_alignParentBottom="true"
                    android:background="@color/common_divider" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_name"
                style="@style/marginLeftRight18"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_58"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rl_identity">

                <TextView
                    android:id="@+id/tv_text_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="姓名："
                    android:textColor="@color/text_99"
                    android:textSize="@dimen/sp_15" />

                <com.officego.commonlib.view.ClearableEditText
                    android:id="@+id/cet_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_4"
                    android:layout_toEndOf="@id/tv_text_name"
                    android:background="@null"
                    android:maxLength="15"
                    android:maxLines="1"
                    android:textColor="@color/text_33"
                    android:textSize="@dimen/sp_15" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_alignParentBottom="true"
                    android:background="@color/common_divider" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_personal_id"
                style="@style/marginLeftRight18"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_58"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rl_name">

                <TextView
                    android:id="@+id/tv_text_personal_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="身份证号："
                    android:textColor="@color/text_99"
                    android:textSize="@dimen/sp_15" />

                <com.officego.commonlib.view.ClearableEditText
                    android:id="@+id/cet_personal_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_4"
                    android:layout_toEndOf="@id/tv_text_personal_id"
                    android:background="@null"
                    android:maxLength="18"
                    android:maxLines="1"
                    android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:inputType="number"
                    android:textColor="@color/text_33"
                    android:textSize="@dimen/sp_15" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_alignParentBottom="true"
                    android:background="@color/common_divider" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_upload_id"
                style="@style/marginLeftRight18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/dp_20"
                android:text="上传身份证"
                android:textColor="@color/text_99"
                android:textSize="@dimen/sp_15"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rl_personal_id" />

            <LinearLayout
                android:id="@+id/ll_upload_id_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_upload_id">

                <RelativeLayout
                    android:id="@+id/rl_image_front"
                    style="@style/marginLeftRight18"
                    android:layout_width="@dimen/dp_154"
                    android:layout_height="@dimen/dp_115"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_weight="1">

                    <com.officego.commonlib.view.RoundImageView
                        android:id="@+id/riv_image_front"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/common_blue_normal"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/tv_upload_front"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawableTop="@mipmap/ic_idcard_img"
                        android:drawablePadding="@dimen/dp_6"
                        android:text="上传身份证人像面"
                        android:textColor="@color/common_blue_main"
                        android:textSize="@dimen/sp_13" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_image_back"
                    style="@style/marginLeftRight18"
                    android:layout_width="@dimen/dp_154"
                    android:layout_height="@dimen/dp_115"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_weight="1">

                    <com.officego.commonlib.view.RoundImageView
                        android:id="@+id/riv_image_back"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/common_blue_normal"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/tv_upload_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawableTop="@mipmap/ic_idcard_img"
                        android:drawablePadding="@dimen/dp_6"
                        android:text="上传身份证国徽面"
                        android:textColor="@color/common_blue_main"
                        android:textSize="@dimen/sp_13" />
                </RelativeLayout>

            </LinearLayout>

            <View
                android:id="@+id/v_gray_spaces"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_25"
                android:background="@color/common_divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_upload_id_image" />

            <RelativeLayout
                android:id="@+id/rl_office"
                style="@style/marginLeftRight18"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_86"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/v_gray_spaces">

                <TextView
                    android:id="@+id/tv_text_office"
                    android:layout_width="@dimen/dp_94"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="写字楼名称："
                    android:textColor="@color/text_99"
                    android:textSize="@dimen/sp_15" />

                <com.officego.commonlib.view.ClearableEditText
                    android:id="@+id/cet_office_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_4"
                    android:layout_toEndOf="@id/tv_text_office"
                    android:background="@null"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/text_33"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_text_office"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_98"
                    android:layout_marginTop="@dimen/dp_5"
                    android:drawablePadding="@dimen/dp_4"
                    android:textColor="@color/text_99"
                    android:textSize="@dimen/sp_12" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_alignParentBottom="true"
                    android:background="@color/common_divider" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_type"
                style="@style/marginLeftRight18"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_58"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rl_office">

                <TextView
                    android:id="@+id/tv_text_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="房产类型："
                    android:textColor="@color/text_99"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_4"
                    android:layout_toEndOf="@id/tv_text_type"
                    android:text="自有房产"
                    android:textColor="@color/text_33"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/ic_right_arrow_small" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_alignParentBottom="true"
                    android:background="@color/common_divider" />
            </RelativeLayout>

            <include
                layout="@layout/include_id_company"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_18"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rl_type" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_recommend_building"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_18"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rl_office" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/btn_upload"
        style="@style/marginLeftRight18"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/btn_common_bg_primary"
        android:gravity="center"
        android:text="@string/str_submit_identity"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nsv_view" />
</androidx.constraintlayout.widget.ConstraintLayout>

