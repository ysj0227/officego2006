<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <com.officego.commonlib.view.TitleBarView
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:dividerShow="true"
        app:leftDefaultClickEnable="true"
        app:leftIcon="@drawable/ic_back_dark"
        app:titleText="OfficeGo"
        app:titleTextColor="@color/text_33" />

    <ImageView
        android:id="@+id/iv_computer"
        android:layout_width="@dimen/dp_84"
        android:layout_height="@dimen/dp_80"
        android:layout_below="@id/title_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_90"
        android:background="@mipmap/ic_computer" />

    <TextView
        android:id="@+id/tv_login_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_computer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_20"
        android:text="登录确认"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_login_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_login_confirm"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_10"
        android:text="消息将会同步到本地"
        android:textColor="@color/text_66"
        android:textSize="@dimen/sp_14" />

    <Button
        android:id="@+id/btn_login"
        style="@style/BtnBigOrange"
        android:layout_width="@dimen/dp_140"
        android:layout_height="@dimen/dp_42"
        android:layout_below="@id/tv_login_info"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_42"
        android:text="@string/str_login" />

    <Button
        android:id="@+id/btn_login_cancel"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_42"
        android:layout_below="@id/btn_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_20"
        android:text="取消登录"
        android:textColor="@color/text_66"
        android:textSize="@dimen/sp_16" />
</RelativeLayout>