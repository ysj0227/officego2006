<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_floors"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_60"
    android:background="@drawable/bg_common_list_item">

    <TextView
        android:id="@+id/tv_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_10"
        android:text="第"
        android:textColor="@color/text_66_p50"
        android:textSize="@dimen/sp_15" />

    <EditText
        android:id="@+id/et_floors"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_35"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toEndOf="@id/tv_no"
        android:background="@drawable/edittext_edge_grey2"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_15"
        tools:ignore="RelativeOverlap" />

    <TextView
        android:id="@+id/tv_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_toEndOf="@id/et_floors"
        android:text="层"
        android:textColor="@color/text_66_p50"
        android:textSize="@dimen/sp_15"
        tools:ignore="ContentDescription" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_18">

        <TextView
            android:id="@+id/tv_count_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="总"
            android:textColor="@color/text_66_p50"
            android:textSize="@dimen/sp_15"
            tools:ignore="ContentDescription" />

        <EditText
            android:id="@+id/et_floors_count"
            android:layout_width="@dimen/dp_58"
            android:layout_height="@dimen/dp_35"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toEndOf="@id/tv_count_text"
            android:background="@drawable/edittext_edge_grey2"
            android:ellipsize="end"
            android:inputType="phone"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/text_33"
            android:textSize="@dimen/sp_15"
            tools:ignore="RelativeOverlap" />

        <TextView
            android:id="@+id/tv_floor_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_toEndOf="@id/et_floors_count"
            android:text="层"
            android:textColor="@color/text_66_p50"
            android:textSize="@dimen/sp_15"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/common_divider"
        android:visibility="visible" />
</RelativeLayout>