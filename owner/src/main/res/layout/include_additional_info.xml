<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_reject_additional_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_text_additional_info"
        android:layout_alignBottom="@id/rv_additional_info"
        android:background="@mipmap/ic_reject_bg"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_text_additional_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_14"
        android:text="上传补充材料"
        android:textColor="@color/text_33"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_tip_additional_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_text_additional_info"
        android:layout_marginStart="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_6"
        android:text="请上传以公司为主体的房屋租赁协议或其他相关材料"
        android:textColor="@color/text_66_p50"
        android:textSize="@dimen/sp_12" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_additional_info"
        style="@style/marginLeftRight18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_tip_additional_info"
        android:layout_marginTop="@dimen/dp_12"
        android:nestedScrollingEnabled="false" />

</RelativeLayout>