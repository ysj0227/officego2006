<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_60"
    android:layout_alignParentBottom="true">

    <RelativeLayout
        android:id="@+id/iv_left_more"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60">

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_16"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_18"
            android:background="@mipmap/ic_expland"
            android:visibility="visible"
            tools:ignore="ContentDescription" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_expand"
        android:layout_width="@dimen/dp_60"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dp_18"
        android:gravity="center_vertical"
        android:text="@string/str_expand"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        android:visibility="gone"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_home_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_55"
        android:layout_marginRight="@dimen/dp_55"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_add"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_18"
        android:background="@mipmap/ic_add_white"
        android:visibility="gone"
        tools:ignore="ContentDescription" />
</RelativeLayout>