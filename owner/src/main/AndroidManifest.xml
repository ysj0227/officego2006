        <activity
            android:name=".message.MessageFragment_"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".mine.MineFragment_"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainOwnerActivity_"
            android:screenOrientation="portrait" />
        <activity
            android:name=".h5.WebViewActivity_"
            android:screenOrientation="portrait" />
        <activity
            android:name=".h5.WebViewNoImgActivity_"
            android:screenOrientation="portrait" />
        <activity
            android:launchMode="singleTask"
            android:name=".mine.MineMessageActivity_"
            android:screenOrientation="portrait" />
        <activity
            android:launchMode="singleTask"
            android:name=".mine.MineSettingActivity_"
            android:screenOrientation="portrait" />
        <activity
            android:launchMode="singleTask"
            android:name=".mine.ModifyWechatActivity_"
            android:screenOrientation="portrait" />
        <activity
            android:launchMode="singleTask"
